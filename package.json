{
  "name": "website",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --config config/eslint.config.mjs",
    "lint:fix": "eslint . --fix --config config/eslint.config.mjs",
    "format:check": "prettier --check . --config config/prettier.config.js --ignore-path config/.prettierignore",
    "format": "prettier --write . --config config/prettier.config.js --ignore-path config/.prettierignore",
    "arch:validate": "depcruise src/lib src/app --config config/.dependency-cruiser.cjs",
    "bundle:analyze": "ANALYZE=true pnpm build",
    "test:mutation": "stryker run config/stryker.config.json",
    "test:mutation:critical": "stryker run config/stryker.critical.config.json",
    "quality:check": "pnpm format:check && pnpm lint && pnpm arch:validate",
    "validate:env": "node scripts/validate-env-vars.cjs",
    "validate:packages": "node scripts/validate-package-versions.cjs",
    "validate:all": "pnpm validate:env && pnpm validate:packages && pnpm tsc --noEmit",
    "test": "vitest --config config/vitest.config.ts",
    "test:run": "vitest run --config config/vitest.config.ts",
    "test:ui": "vitest --ui --coverage --config config/vitest.config.ts",
    "test:coverage": "vitest --coverage --config config/vitest.config.ts",
    "test:watch": "vitest --watch --config config/vitest.config.ts",
    "test:e2e": "playwright test --config config/playwright.config.ts",
    "test:e2e:ui": "playwright test --ui --config config/playwright.config.ts",
    "test:e2e:debug": "playwright test --debug --config config/playwright.config.ts",
    "test:integration": "vitest run --config config/vitest.integration.config.ts",
    "db:check": "dotenv -e .env -- node -e \"['CLOUDFLARE_ACCOUNT_ID','CLOUDFLARE_DATABASE_ID','CLOUDFLARE_API_TOKEN'].forEach(k => { if (!process.env[k] || process.env[k].trim() === '') throw new Error('Missing or empty: ' + k) })\"",
    "db:generate": "npm run db:check && dotenv -e .env -- drizzle-kit generate --config config/drizzle.config.ts",
    "db:migrate:local": "wrangler d1 migrations apply DB --local",
    "db:migrate:remote": "npm run db:check && dotenv -e .env -- wrangler d1 migrations apply DB --remote",
    "db:studio": "dotenv -e .env -- drizzle-kit studio --config config/drizzle.config.ts",
    "db:push": "dotenv -e .env -- drizzle-kit push --config config/drizzle.config.ts",
    "db:seed": "wrangler d1 execute DB --local --file=./drizzle/seeds/categories.sql",
    "db:seed:articles": "wrangler d1 execute DB --local --file=./drizzle/seeds/sample-articles.sql",
    "deploy": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
    "preview": "opennextjs-cloudflare build && wrangler dev --port 8788 --ip 127.0.0.1",
    "cf-typegen": "wrangler types --env-interface CloudflareEnv ./cloudflare-env.d.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "@opennextjs/cloudflare": "^1.13.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.44.7",
    "drizzle-zod": "^0.8.3",
    "lucide-react": "^0.552.0",
    "next": "15.4.7",
    "next-intl": "^4.5.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "^3.3.1",
    "tw-animate-css": "^1.4.0",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.9.0",
    "@next/bundle-analyzer": "^15.0.0",
    "@next/eslint-plugin-next": "15.4.7",
    "@playwright/test": "^1.56.1",
    "@stryker-mutator/core": "^9.3.0",
    "@stryker-mutator/vitest-runner": "^9.3.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.19.24",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-v8": "^4.0.7",
    "@vitest/eslint-plugin": "^1.1.0",
    "@vitest/ui": "^4.0.7",
    "better-sqlite3": "^12.4.1",
    "dependency-cruiser": "^16.4.0",
    "dotenv-cli": "^10.0.0",
    "drizzle-kit": "^0.31.6",
    "eslint": "^9.9.0",
    "eslint-config-next": "15.4.7",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-mdx": "^3.1.5",
    "eslint-plugin-next-intl": "^1.3.1",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "eslint-plugin-testing-library": "^7.13.5",
    "eslint-plugin-tsdoc": "^0.3.0",
    "globals": "^15.9.0",
    "happy-dom": "^20.0.10",
    "husky": "^9.1.7",
    "jsdom": "^27.1.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.2.0",
    "vitest": "^4.0.7",
    "wrangler": "^4.50.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ],
    "*.{css,scss}": [
      "prettier --write"
    ]
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "eslint": "9",
        "tailwindcss": "4"
      }
    }
  }
}
