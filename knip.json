{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "entry": [
    "src/app/**/{page,layout,loading,error,not-found,route,template,default}.{ts,tsx}",
    "src/middleware.ts"
  ],
  "project": ["src/**/*.{ts,tsx}"],
  "ignore": [
    "**/*.d.ts",
    "**/*.test.{ts,tsx}",
    "**/*.spec.{ts,tsx}",
    "tests/**",
    "drizzle/**",
    ".next/**",
    ".open-next/**"
  ],
  "ignoreDependencies": [
    "@next/bundle-analyzer",
    "@stryker-mutator/*",
    "eslint-*",
    "prettier-*",
    "@vitest/*",
    "@testing-library/*",
    "@playwright/test",
    "husky",
    "lint-staged",
    "dotenv-cli",
    "wrangler",
    "better-sqlite3",
    "jsdom",
    "happy-dom"
  ],
  "next": {
    "entry": [
      "src/app/**/{page,layout,loading,error,not-found,route,template,default}.{ts,tsx}!",
      "src/middleware.ts!"
    ]
  }
}
